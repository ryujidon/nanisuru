<main class="main">
  <div class="inner">


<%= search_form_for @q, url:search_schedules_path,class: "search-form" do |f| %>
  <div class="field">
    <%= f.label :category_id_eq, "カテゴリー" %><br />
        <%= f.collection_select(:category_id_eq, Category.all, :id, :name, {}, {class:"select-box", id:"schedule-category"}) %>
  </div>

  <div class="field">
    <%= f.label :people_id_eq, "人数" %><br />
        <%= f.collection_select(:people_id_eq, People.all, :id, :name, {}, {class:"select-box", id:"schedule-people"}) %>
  </div>

  <div class="field">
    <%= f.label :budget_id_eq, "予算" %><br />
        <%= f.collection_select(:budget_id_eq, Budget.all, :id, :name, {}, {class:"select-box", id:"schedule-budget"}) %>
  </div>
  <%= f.submit "検索", class: "search-btn" %>
<% end %>


      <div class="greeting">
      </div>

    <div class="card__wrapper">
  <%= render partial: 'schedule', collection: @schedules %>

    </div>
  </div>
</main>
